package Aula05;

import java.util.Scanner;

public class Aula05 {
	
	public static void main (String[] args) {
		
		ContaBanco conta1 = new ContaBanco();
		ContaBanco conta2 = new ContaBanco();
		
		Scanner teclado = new Scanner(System.in);
		
		System.out.println("Para a conta 1");
		
		conta1.definirDados(conta1);
		
		conta1.abrirConta();
		conta1.detalhes();
		
		System.out.println("Gostaria de realizar um saque?");
		
		char tipo2 = teclado.next().charAt(0); 
	
		if(tipo2 =='s') {
		
			System.out.println("Quanto você gostaria de sacar?");
			
			float saque = teclado.nextFloat();
			conta1.sacar(saque);
			conta1.detalhes();
		}
		
		else {
			System.out.println("Nenhum saque realizado");
		}
		
		System.out.println("Agora para a conta 2");
		
		conta2.definirDados(conta2);
		conta2.abrirConta();
		conta2.detalhes();
		
	//	System.out.println("Você gostaria de transferir?");
		
	//	char querTransferir = teclado.next().charAt(0); 
		
	//	if(queTransferir == 's') {
		System.out.println("O quanto você quer transferir?: ");
		float f = teclado.nextFloat();
		conta2.transferencia(conta2,conta1,f);
	//	}
	//	else {
	//		return;
	//	}
		conta2.detalhes();
		conta1.detalhes();
	}
}
